@page
@model WepApp01.Pages.GroutCalculatorsModel
@{
    ViewData["pageName"] = "Grout Calculator";
}

<form method="post">
    <p>
        <label for="length">length of tile</label>
        <input type="number" id="length" name="length" placeholder="mm measurements" />
    </p>
    <p>
        <label for="width">width of tile</label>
        <input type="number" id="width" name="width" placeholder="mm measurements"/>
    </p>
    <p>
        <label for="depth">depth of tile</label>
        <input type="number" id="depth" name="depth" placeholder="mm measurements"/>
    </p>
    <p>
        <label for="spacers">size of spacers</label>
        <input type="text" id="spacers" name="spacers" placeholder="mm measurements" pattern="[+-]?([0-9]*[.])?[0-9]+" />
    </p>
    <p>
        <label for="area">total area to be grouted</label>
        <input type="text" id="area" name="area" placeholder="m2" pattern="[+-]?([0-9]*[.])?[0-9]+" />
    </p>
    <p>
        <input type="submit"/>
    </p>
    @{
        if (@Model.totalGrout != 0)
        {
            <p>@Model.totalGrout kg grout required</p>
        }
    }
</form>
